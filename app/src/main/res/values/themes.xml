<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UNIVERSE" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Font styles -->
        <item name="fontFamily">@font/helvetica_regular</item>
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:buttonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

    <style name="TextAppearance.Nexa.Bold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/helvetica_bold</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextAppearance.Nexa.Regular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/helvetica_regular</item>
    </style>

    <style name="TextAppearance.Nexa.Light" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/helvetica_light</item>
    </style>

    <style name="TextAppearance.Nexa.Italic" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/helvetica_italic</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>
